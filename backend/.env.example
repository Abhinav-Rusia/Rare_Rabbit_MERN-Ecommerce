# Backend Environment Variables for Vercel Deployment

# Application Environment
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/rare-rabbit?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here

# Cloudinary Configuration (Image Upload)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Stripe Configuration (Payment)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# PayPal Configuration (Payment)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Email Configuration (Optional - for order confirmations)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Frontend URL (Your deployed frontend URL)
FRONTEND_URL=https://your-frontend-app.vercel.app

# Note: Copy this file to .env and fill in your actual values
# These environment variables will be set in Vercel dashboard
